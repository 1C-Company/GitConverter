									Иначе
										ЧтениеXML.Пропустить();
									КонецЕсли;
								КонецЦикла;
							КонецЕсли;
						Иначе
							ЧтениеXML.Пропустить();
						КонецЕсли;
					КонецЦикла;
					ЧтениеXML.Пропустить();
					Прервать;
				Иначе
					ЧтениеXML.Пропустить();
				КонецЕсли;

